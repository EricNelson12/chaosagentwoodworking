---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Import Matter TRIAL font */
			@import url('https://fonts.googleapis.com/css2?family=Matter+TRIAL:wght@300;400;500;600;700&display=swap');
			
			/* Override global main padding for full-width hero */
			main {
				padding: 0 !important;
				width: 100% !important;
				max-width: 100% !important;
				margin: 0 !important;
			}
			
			/* Apply Matter TRIAL font to all text except logo */
			body, h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label {
				font-family: "Matter TRIAL", sans-serif !important;
			}
			
			.hero-section {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 0;
				max-width: none;
				margin: 0;
				padding: 0;
				align-items: stretch;
				min-height: calc(100vh - 80px); /* Subtract header height */
			}
			
			.hero-image {
				position: relative;
				overflow: hidden;
				border-radius: 0;
				box-shadow: none;
			}
			
			.hero-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				display: block;
			}
			
			.hero-content {
				background: linear-gradient(135deg, #8B4513, #A0522D);
				padding: 4rem;
				border-radius: 0;
				color: white;
				box-shadow: 0 8px 32px rgba(139, 69, 19, 0.3);
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: flex-start;
			}
			
			.hero-content h1 {
				font-size: 3rem;
				margin-bottom: 1.5rem;
				color: white;
				line-height: 1.2;
			}
			
			.hero-content p {
				font-size: 1.3rem;
				margin-bottom: 2.5rem;
				line-height: 1.6;
				opacity: 0.95;
				max-width: 500px;
			}
			
			.cta-button {
				display: inline-block;
				background: #D2691E;
				color: white;
				padding: 1.2rem 2.5rem;
				border-radius: 8px;
				text-decoration: none;
				font-weight: 600;
				font-size: 1.2rem;
				transition: all 0.3s ease;
				border: 2px solid transparent;
			}
			
			.cta-button:hover {
				background: #CD853F;
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(210, 105, 30, 0.4);
			}
			
			.contact-section {
				max-width: 800px;
				margin: 0 auto;
				padding: 4rem 2rem;
				text-align: center;
			}
			
			.contact-section h2 {
				font-size: 2.5rem;
				margin-bottom: 2rem;
				color: rgb(var(--black));
			}
			
			.contact-form {
				background: white;
				padding: 3rem;
				border-radius: 16px;
				box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
				max-width: 600px;
				margin: 0 auto;
			}
			
			.form-group {
				margin-bottom: 1.5rem;
				text-align: left;
			}
			
			.form-group label {
				display: block;
				margin-bottom: 0.5rem;
				font-weight: 600;
				color: rgb(var(--gray-dark));
			}
			
			.form-group input,
			.form-group textarea {
				width: 100%;
				padding: 0.75rem;
				border: 2px solid rgb(var(--gray-light));
				border-radius: 8px;
				font-size: 1rem;
				font-family: inherit;
				transition: border-color 0.3s ease;
			}
			
			.form-group input:focus,
			.form-group textarea:focus {
				outline: none;
				border-color: var(--accent);
			}
			
			.form-group textarea {
				resize: vertical;
				min-height: 120px;
			}
			
			.submit-button {
				background: var(--accent);
				color: white;
				padding: 1rem 2rem;
				border: none;
				border-radius: 8px;
				font-size: 1.1rem;
				font-weight: 600;
				cursor: pointer;
				transition: all 0.3s ease;
				width: 100%;
			}
			
			.submit-button:hover {
				background: var(--accent-dark);
				transform: translateY(-2px);
			}
			
			@media (max-width: 768px) {
				.hero-section {
					grid-template-columns: 1fr;
					gap: 0;
					padding: 0;
					min-height: auto;
				}
				
				.hero-image {
					overflow: hidden;
				}
				
				.hero-image img {
					height: calc(50vh + 30px);
					margin-bottom: -30px;
				}
				
				.hero-content {
					padding: 2rem;
					order: 2;
				}
				
				.hero-content h1 {
					font-size: 2rem;
				}
				
				.hero-content p {
					font-size: 1.1rem;
				}
				
				.contact-section {
					padding: 2rem 1rem;
				}
				
				.contact-form {
					padding: 2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero-section">
				<div class="hero-image">
					<img src="/juliette_banner.jpg" alt="Juliette Stephens in her woodworking shop - Chaos Agent Woodworking" />
				</div>
				<div class="hero-content">
					<h1>Handcrafted Woodworking Excellence</h1>
					<p>Discover unique, custom woodworking pieces crafted with passion and precision. From furniture to decorative items, each piece tells a story of craftsmanship and creativity.</p>
					<a href="#contact" class="cta-button">Get In Touch</a>
				</div>
			</section>
			
			<section id="contact" class="contact-section">
				<h2>Let's Create Something Beautiful Together</h2>
				<form class="contact-form">
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" id="name" name="name" required />
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input type="email" id="email" name="email" required />
					</div>
					<div class="form-group">
						<label for="message">Message</label>
						<textarea id="message" name="message" placeholder="Tell us about your project..." required></textarea>
					</div>
					<button type="submit" class="submit-button">Send Message</button>
				</form>
			</section>
		</main>
		<Footer />
	</body>
</html>
