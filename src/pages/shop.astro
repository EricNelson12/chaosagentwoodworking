---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Shop - Coming Soon" description="Shop for handcrafted woodworking pieces - Coming Soon" />
		<style>
			/* Import Matter TRIAL font */
			@import url('https://fonts.googleapis.com/css2?family=Matter+TRIAL:wght@300;400;500;600;700&display=swap');
			
			/* Apply Matter TRIAL font to all text */
			body, h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label {
				font-family: "Matter TRIAL", sans-serif !important;
			}
			
			main {
				width: calc(100% - 2em);
				max-width: 1200px;
				margin: 0 auto;
				padding: 2em;
			}
			
			.construction-container {
				text-align: center;
				padding: 4rem 2rem;
				max-width: 800px;
				margin: 0 auto;
			}
			
			.construction-icon {
				font-size: 4rem;
				margin-bottom: 2rem;
				opacity: 0.8;
			}
			
			.construction-title {
				font-size: 3rem;
				color: rgb(var(--black));
				margin-bottom: 1.5rem;
				line-height: 1.2;
			}
			
			.construction-subtitle {
				font-size: 1.5rem;
				color: rgb(var(--gray-dark));
				margin-bottom: 2rem;
				line-height: 1.6;
			}
			
			.construction-description {
				font-size: 1.2rem;
				color: rgb(var(--gray-dark));
				line-height: 1.7;
				margin-bottom: 3rem;
				max-width: 600px;
				margin-left: auto;
				margin-right: auto;
			}
			
			.construction-features {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 2rem;
				margin: 3rem 0;
				text-align: left;
			}
			
			.feature-item {
				background: rgba(139, 69, 19, 0.05);
				padding: 2rem;
				border-radius: 12px;
				border-left: 4px solid #8B4513;
			}
			
			.feature-item h3 {
				color: #8B4513;
				margin-bottom: 1rem;
				font-size: 1.3rem;
			}
			
			.feature-item p {
				color: rgb(var(--gray-dark));
				line-height: 1.6;
				margin: 0;
			}
			
			.cta-section {
				margin-top: 3rem;
				padding: 2rem;
				background: linear-gradient(135deg, #8B4513, #A0522D);
				border-radius: 16px;
				color: white;
			}
			
			.cta-section h3 {
				font-size: 1.8rem;
				margin-bottom: 1rem;
				color: white;
			}
			
			.cta-section p {
				font-size: 1.1rem;
				margin-bottom: 1.5rem;
				opacity: 0.95;
			}
			
			.cta-button {
				display: inline-block;
				background: #D2691E;
				color: white;
				padding: 1rem 2rem;
				border-radius: 8px;
				text-decoration: none;
				font-weight: 600;
				font-size: 1.1rem;
				transition: all 0.3s ease;
				border: 2px solid transparent;
			}
			
			.cta-button:hover {
				background: #CD853F;
				transform: translateY(-2px);
				box-shadow: 0 8px 25px rgba(210, 105, 30, 0.4);
			}
			
			@media (max-width: 768px) {
				.construction-container {
					padding: 2rem 1rem;
				}
				
				.construction-title {
					font-size: 2.5rem;
				}
				
				.construction-subtitle {
					font-size: 1.3rem;
				}
				
				.construction-features {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="construction-container">
					<div class="construction-icon">üöß</div>
					
					<h1 class="construction-title">Shop Coming Soon!</h1>
					
					<p class="construction-subtitle">
						We're building something special for you
					</p>
					
					<p class="construction-description">
						Our online shop is currently under construction. We're working hard to bring you a beautiful, 
						easy-to-use shopping experience where you can browse and purchase our handcrafted woodworking pieces.
					</p>
					
					<div class="construction-features">
						<div class="feature-item">
							<h3>üõçÔ∏è Easy Shopping</h3>
							<p>Browse our collection of handcrafted pieces with detailed photos and descriptions</p>
						</div>
						
						<div class="feature-item">
							<h3>üì∏ High-Quality Photos</h3>
							<p>See every detail of our work with professional product photography</p>
						</div>
						
						<div class="feature-item">
							<h3>üöö Secure Checkout</h3>
							<p>Safe and secure payment processing for your peace of mind</p>
						</div>
						
						<div class="feature-item">
							<h3>üì± Mobile Friendly</h3>
							<p>Shop from anywhere with our responsive, mobile-optimized design</p>
						</div>
					</div>
					
					<div class="cta-section">
						<h3>Stay Updated</h3>
						<p>
							Be the first to know when our shop opens! Follow us on Instagram for updates and 
							behind-the-scenes content.
						</p>
						<a href="https://www.instagram.com/chaosagentwoodworking/" target="_blank" class="cta-button">
							Follow on Instagram
						</a>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html> 